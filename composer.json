{
    "name": "s-ringert/skeleton",
    "description": "Basic Skeleton with Zend Expressive, Doctrine and CI Pipeline",
    "type": "project",
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.4",
        "doctrine/orm": "2.7.0",
        "laminas/laminas-component-installer": "^2.1.1",
        "laminas/laminas-config-aggregator": "^1.0",
        "laminas/laminas-diactoros": "^1.7.1 || ^2.0",
        "mezzio/mezzio": "^3.0.1",
        "mezzio/mezzio-fastroute": "^3.0",
        "mezzio/mezzio-helpers": "^5.0",
        "mezzio/mezzio-twigrenderer": "^2.4",
        "laminas/laminas-servicemanager": "^3.3",
        "laminas/laminas-stdlib": "^3.1",
        "laminas/laminas-dependency-plugin": "^1.0"
    },
    "require-dev": {
        "filp/whoops": "^2.1.12",
        "phpstan/phpstan": "^0.12.7",
        "phpunit/phpunit": "^8.5",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/var-dumper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "test/AppTest/"
        }
    },
    "scripts": {
        "analyze": [
            "@cs-check",
            "@stan",
            "@test"
        ],
        "clear-all-cache": [
            "@clear-config-cache",
            "doctrine orm:clear-cache:metadata",
            "doctrine orm:clear-cache:query",
            "doctrine orm:clear-cache:result",
            "composer clear-cache"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse -l 4 src",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "doctrine": "doctrine"
    }
}
